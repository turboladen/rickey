<div class="col-md-12">
  <h2>Concoction Types</h2>

  <div class="col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <button {{action 'addConcoctionType'}} class="btn btn-success pull-right">Add</button>
            <div class="input-group">
              <span id="concoction-type-addon" class="input-group-addon">ðŸ”‹</span>
              {{input value=name class="form-control" area-describedby="concoction-type-addon"}}
            </div>
          </td>
          <td></td>
        </tr>
        {{#each model as |concoctionType|}}
          <tr>
            <td>{{concoctionType.name}}</td>
            <td><button {{action 'deleteConcoctionType' concoctionType}} class="btn btn-danger">Delete</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{outlet}}
